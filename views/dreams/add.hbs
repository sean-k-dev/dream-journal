<h3>Log new dream</h3>
<div class="row">
    <form action="/dreams" method="post" class="col s12">
        <div class="row">
            <div class="input-field">
                <input type="text" name="title" id="title">
                <label for="title">Title</label>
            </div>
        </div>


        <div class="row">
            <div class="input-field">
                <select name="status" id="status">
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                </select>
                <label for="status">Visibility</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Write down what you can remember from your dream:</h5>
                <textarea id="body" name="body"></textarea>
            </div>
        </div>

        <div class="row">
            <label>Lucid Dream</label>
            <div class="switch">
                <label>No<input name="isLucid" type="checkbox" value="yes" unchecked>
                <span class="lever"></span>Yes</label>
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/dashboard" class="btn dark-blue">Cancel</a>
        </div>
    </form>
</div>
