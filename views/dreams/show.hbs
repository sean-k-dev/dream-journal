<div class="row">
    <div class="col s12 m8">
        <h3>
            {{dream.title}}
        </h3>
        <div class="card dream">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'Do MMMM YYYY, h:mm:ss a'}}</span>
                {{{dream.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{dream.user.displayName}}</span>
                <img src="{{dream.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/dreams/user/{{dream/user._id}}">View more dreams by {{dream.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>

