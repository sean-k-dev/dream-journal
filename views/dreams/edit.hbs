<h3>Edit this dream</h3>
<div class="row">
    <form action="/dreams/{{dream._id}}" method="POST" class="col s12">
        <input type="hidden" name="_method" value="PUT">
        <div class="row">
            <div class="input-field">
                <input type="text" name="title" id="title" value="{{dream.title}}">
                <label for="title">Title</label>
            </div>
        </div>


        <div class="row">
            <div class="input-field">
                <select name="status" id="status">
                    {{#select dream.status}}
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                    {{/select}}
                </select>
                <label for="status">Visibility</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Did you remember something else? Make changes to your dream below:</h5>
                <textarea id="body" name="body">{{dream.body}}</textarea>
            </div>
        </div>

        <div class="row">
            <label>Lucid Dream</label>
            <div class="switch">
                <label>No<input name="isLucid" type="checkbox" disabled>
                <span class="lever"></span>Yes</label>
            </div>
        </div>


        <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/dashboard" class="btn dark-blue">Cancel</a>
        </div>
    </form>
</div>
